{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "..",
    "paths": {
      "@shared/*": ["types/*"]
    },
    "types": ["node"]
  },
  "include": ["src", "../types"]
}
